<%= simple_form_for([:admin, user]) do |f| %>
	
	<%= f.input :email %>
	
	<%= f.input :password %> 

	<%= f.input :admin, label: "Is an admin?" %>

	<br>
	<h2>Roles</h2> <br>

	<!--Here is a select box for all the roles.-->
	<table>
		<% projects.each do |project| %>
			<tr>
			<th><%= label_tag dom_id(project), project.name %></th>
			<td><%= select_tag dom_id(project), options_for_select(roles, user.role_on(project)), name: "roles[#{project.id}]", include_blank: true %>
				
			</td>
			</tr>
		<% end %>
	</table>

	<%= f.submit %> 
	
<% end %>