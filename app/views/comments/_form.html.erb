<%= simple_form_for [ticket, comment] do |f| %>
	<%= f.input :text %>
	
	<!-- the following line states the cleverness of simple_form_for -->
	<!-- It will load all the entries of the state table in the form of a select box -->
	<% if policy(ticket).change_state? %>
		<%= f.association :state %>
	<% end %>

	<%= render "tags/form", f: f %>

	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>