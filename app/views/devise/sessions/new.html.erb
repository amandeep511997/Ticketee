<div class="container ">
	<div class="row justify-content-md-center" style="margin-top: 50px">
		<div class="col col-md-5 col-lg-5 card w-75">

			<div class="row card-header"><h2><i class="fa fa-sign-in" aria-hidden="true"></i> Sign in</h2></div><br>

			<div class="card-body">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-inputs">
					<%= f.input :email, required: false, autofocus: true %>
					<%= f.input :password, required: false %>
					<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				</div>

				<div class="form-actions">
					<%= f.button :submit, "Sign in" %>
				</div> <br />
				<% end %>
			</div>
			<div class="row card-footer">
				<%= link_to "Forgot your password?", new_password_path(resource_name), style: "text-decoration: none;" %>
				<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
				<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), style: "text-decoration: none;" %><br />
				<% end -%>
			</div>
		</div>
	</div>
</div>
