<%= simple_form_for([project, ticket]) do |f| %>
	
	<%= f.input :name %>
	
	<%= f.input :description %> 


	<div id="attachments">
		<h3>Attachments</h3>
		<!-- locals is used to set the local variables in the partial-->
		<%= render partial: "attachments/form", 
			locals: {f: f, index: 0} %>
	</div>
	

	<p>
	<%= link_to "Add another file", new_attachment_path, remote: true, id: "add_file" %>
	</p>

	<%= f.submit %> 
	
<% end %>